<div class="row">
  <div class="col-md-6">
    <img src="<%= p.imagen_url || '/img/placeholder.webp' %>" class="img-fluid rounded shadow-sm" alt="<%= p.titulo %>">
  </div>
  <div class="col-md-6">
    <h1><%= p.titulo %></h1>
    <p class="lead">Q<%= Number(p.precio).toFixed(2) %></p>
    <p><%= p.descripcion || '' %></p>

    <% if (user) { %>
      <form method="post" action="/productos/<%= p.id %>/agregar" class="d-flex gap-2 mb-2">
        <input type="hidden" name="producto_id" value="<%= p.id %>">
        <input type="number" name="quantity" min="1" value="1" class="form-control" style="max-width:120px">
        <button class="btn btn-brand">Añadir al carrito</button>
      </form>
      <form method="post" action="/productos/<%= p.id %>/favorito">
        <button class="btn btn-outline-secondary">☆ Agregar/Quitar de favoritos</button>
      </form>
    <% } else { %>
      <a class="btn btn-primary" href="/usuarios/login?next=/productos/<%= p.id %>">Inicia sesión para comprar</a>
    <% } %>
  </div>
</div>
