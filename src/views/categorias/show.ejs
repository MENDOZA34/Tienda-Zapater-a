<header class="banner banner-category">
  <div class="container py-4">
    <h1 class="display-6 m-0">Categoría: <%= categoria.nombre %></h1>
  </div>
</header>

<% if (!productos.length) { %>
  <p class="mt-4">No hay productos en esta categoría.</p>
<% } else { %>
  <div class="row g-3 mt-3">
    <% productos.forEach(p => { %>
      <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm product-card accent">
          <img src="<%= p.imagen_url || '/img/placeholder.webp' %>" class="card-img-top" alt="<%= p.titulo %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= p.titulo %></h5>
            <p class="text-muted">Q<%= Number(p.precio).toFixed(2) %></p>
            <a class="btn btn-outline-secondary mt-auto" href="/productos/<%= p.id %>">Ver</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
